<%= form_for :login do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.text_field :api_key, class: "form-control", placeholder:"API key", autofocus: true %>
    </div>
    <div class="form-group">
      <div class="btn-group btn-group-justified" data-toggle="buttons">
        <%= f.label :api_mode_sandbox, class: 'btn btn-default api-mode-sandbox active' do %>
          <%= f.radio_button :api_mode, :sandbox, autocomplete: :off, checked: true %>
          <%= api_mode_humanize :sandbox %>
        <% end %>
        <%= f.label :api_mode_production, class: 'btn btn-default api-mode-production' do %>
          <%= f.radio_button :api_mode, :production, autocomplete: :off %>
          <%= api_mode_humanize :production %>
        <% end %>
      </div>
    </div>
    <%= f.submit class: "btn btn-lg btn-primary btn-block", value: "Login", data: {disable_with: "Login"} %>
  </fieldset>
<% end %>
