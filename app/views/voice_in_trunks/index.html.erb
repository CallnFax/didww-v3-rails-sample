<div class="panel panel-default">
  <div class="panel-heading">
    My Voice In Trunks
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <%= render 'filter' %>
    <hr />
    <div class="row text-right">
      <div class="col-lg-12">
        <%= render 'new_trunk_button' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th><%= sort_link :name, t('trunk.name') %></th>
              <th><%= t 'trunk.configuration' %></th>
              <th><%= t 'trunk.trunk_group' %></th>
              <th><%= sort_link :description, t('trunk.description') %></th>
              <th><%= sort_link :priority, t('trunk.priority') %></th>
              <th><%= sort_link :weight, t('trunk.weight') %></th>
              <th><%= sort_link :capacity_limit, t('trunk.capacity_limit') %></th>
              <th><%= sort_link :created_at, t('trunk.created_at') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'trunk', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
