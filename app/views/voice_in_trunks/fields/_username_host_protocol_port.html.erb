<div class="row">
  <div class="col-md-5">
    <div class="form-group <%= f.has_error?(:username) %>">
      <%= conf.l_text_field :username %>
    </div>
  </div>
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-8">
        <div class="form-group <%= f.has_error?(:host) %>">
          <%= conf.l_text_field :host %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group <%= f.has_error?(:transport_protocol) %>">
          <%= conf.l_select :transport_protocol_id, conf.object.class::TRANSPORT_PROTOCOLS.invert %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="form-group <%= f.has_error?(:port) %>">
      <%= conf.l_text_field :port %>
    </div>
  </div>
</div>
