<div class="panel panel-default">
  <div class="panel-heading">
    Exports
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row text-right">
      <div class="col-lg-12">
        <%= render 'new_export_button' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th><%= t('export.export_type') %></th>
              <th><%= sort_link :status, t('export.status') %></th>
              <th><%= sort_link :created_at, t('export.created_at') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'export', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
