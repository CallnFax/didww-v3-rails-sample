<div class="panel panel-default">
  <div class="panel-heading">
    My DID Numbers
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <%= render 'filter' %>
    <hr />
    <div class="row text-right">
      <div class="col-lg-12">
        To order DID numbers, please visit &nbsp;&nbsp;
        <%= link_to coverage_path, class: "btn btn-success" do %>
          &nbsp;&nbsp;Coverage&nbsp;&nbsp;
        <% end %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th>
                <%= check_box_tag nil, 'true', false, id: 'batch-action-select-all-checkbox' %>
              </th>
              <th><%= sort_link :number, t('did.number') %></th>
              <th><%= sort_link :description, t('did.description') %></th>
              <th><%= t 'did_group.area_name' %></th>
              <th><%= t 'did.status' %></th>
              <th><%= t 'resources.trunk' %></th>
              <th><%= t 'resources.trunk_group' %></th>
              <th><%= sort_link :capacity_limit, t('did.capacity_limit') %></th>
              <th><%= sort_link :channels_included_count, t('did.channels_included_count') %></th>
              <th><%= sort_link :expires_at, t('did.expires_at') %></th>
              <th><%= sort_link :created_at, t('did.created_at') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'did', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
    <%= render 'shared/batch_actions' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
