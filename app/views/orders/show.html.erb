<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to 'My Orders', orders_path %> > Order <%= resource.reference %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-3">
        <p>
          <strong>Description</strong><br>
          <%= resource.description %>
        </p>
        <p>
          <strong>Status</strong><br>
          <%= resource.status %>
        </p>
      </div>
      <div class="col-sm-3">
        <p>
          <strong>Created at</strong><br>
          <%= resource.created_at %>
        </p>
        <p>
          <strong>Amount</strong><br>
          <%= number_to_currency resource.amount %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <p><strong>Order items</strong></p>
        <table width="100%" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Prefix</th>
              <th>Area</th>
              <th>Setup price</th>
              <th>Monthly price</th>
              <th>Quantity</th>
              <th colspan="2">Included DID's</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'order_item', collection: resource.items %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= delete_button order_path(resource), confirm: 'Are you sure to cancel this Order?', text: 'Cancel' if resource.pending? %>
      </div>
    </div>
  </div>
  <!-- /.panel-body -->
</div>
