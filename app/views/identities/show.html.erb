<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to 'Identities', identities_path %> >
    <strong><%= resource.display_name %></strong>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <%= render "#{resource.identity_type.downcase}_identity_table" %>
    <div class="row">
      <div class="col-lg-12">
        <%= edit_button edit_identity_path(resource) %>
        <%= delete_button identity_path(resource), confirm: 'Are you sure to delete this Identity?' %>
      </div>
    </div>
  </div>
  <!-- /.panel-body -->
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Addresses
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'addresses' %>
      </div>
      <div class="col-lg-12">
        <%= new_button new_address_path(identity_id: resource.id), label: 'Add address' %>
      </div>
    </div>
  </div>
  <!-- /.panel-body -->
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Proofs
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <ul>
          <%= render partial: 'proofs/proof', collection: resource.proofs %>
        </ul>
      </div>
      <div class="col-lg-12">
        <!-- Button trigger add proof modal -->
        <%= modal_trigger_button 'Add proof',
                                 modal_id: 'add-proof-modal',
                                 type: :success,
                                 icon: :plus %>
      </div>
    </div>
  </div>
  <!-- /.panel-body -->
</div>

<!-- Add Proof Modal -->
<%= render partial: 'proofs/add_proof_modal' %>
<!-- Replace Proof Modal -->
<%= render partial: 'proofs/replace_proof_modal' %>
