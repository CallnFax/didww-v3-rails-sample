<div class="panel panel-default">
  <div class="panel-heading">
    My Trunk Groups
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row text-right">
      <div class="col-lg-12">
        <%= new_button new_voice_in_trunk_group_path %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th><%= sort_link :name, t('trunk.name') %></th>
              <th><%= t 'trunk.configuration' %></th>
              <th><%= t 'trunk.description' %></th>
              <th><%= t 'trunk.priority' %></th>
              <th><%= t 'trunk.weight' %></th>
              <th><%= sort_link :capacity_limit, t('trunk.capacity_limit') %></th>
              <th><%= sort_link :created_at, t('trunk.created_at') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'trunk_group', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
